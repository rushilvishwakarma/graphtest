@import './variables.styl'

*
  margin 0
  padding 0

body
  height 100vh
  padding-left menu-width

  @media screen and (max-width breakpoint-medium)
    padding-left 0

a
  color #1d9fcf
  text-decoration none

h1, h2, h3, h4
  margin 0
  text-align center

  a
    color #333

.pure-button
  font-family 'Open Sans', Arial, sans-serif
  color #fff
  text-transform uppercase
  font-size 12px
  padding 9px 20px
  border-radius 3px
  margin-top 2px

  &:hover
    background-image linear-gradient(rgba(#000, .1) 40%, rgba(#000, .10))

  &.button-twitter
    background-color: #55acee

  &.button-facebook
    background-color: #3b5998

  &.disabled, &.button-disabled
    background #1695c5
    opacity .3

  &.button-primary
    background-color #1695c5

  &.button-secondary
    background-color color-red

.pure-form

  input[type='text']
  input[type='email']
  input[type='password']
  input[type='number']
  select
  textarea
    margin-top 0
    box-shadow none
    border 0
    margin-right 20px
    margin-left 10px

  select
    color #333
    font-size 12px
    margin-top 2px

  label
    margin 0
    position relative
    top -3px
    font-size 12px

.BuiltBy.large
  font-size 25px
  text-align center
  margin-top 50px
  font-family 'Open Sans', Arial, sans-serif
  font-weight 100
  color #666

  img
    vertical-align middle
    height 28px

  a, i
    color color-workshape

  i
    margin 0 5px